body
  font-family: "Open Sans", "Segoe UI", Verdana, Sans-serif
  font-size: 1rem
  font-style: normal
  font-variant: normal
  font-weight: 400
  line-height: 1rem

a
  &:hover
    color: #76110F
  &:active
    color: #930a09
  span
    display: inline-block
    margin-left: 0.125em
    width: 15px
    height: 15px

.navbar, .sidebar
  backdrop-filter: blur(8px)
  background-color: rgba(252, 252, 252, 0.85) !important
  background-image: url("~@source/assets/images/acrylic-noise.png") !important

  .logo
    height: 2.625rem !important
    margin: -.25rem 0

  .site-name
    display: none

  .links
    background: none !important

.home
  .features
    text-align: center

  .hero img
    max-width: 260px !important

.page
  .custom-block
    &.tip
      background: #f8f8f8
      border-color: #dcdcdc

.medium-zoom--opened
  .medium-zoom-overlay
    backdrop-filter: blur(6px)
    background-color: rgba(0, 0, 0, 0.4) !important

.medium-zoom-image.medium-zoom-image--opened
  filter: drop-shadow(0 2px 21px rgba(0, 0, 0, 0.1474)) drop-shadow(0 32px 64px rgba(0, 0, 0, 0.1876))

.color-dot
  display: inline-block
  border-radius: 12px
  width: 12px
  height: 12px
  margin-right: 4px

* {
  scrollbar-width: thin;
  scrollbar-color: black white;
}

::-webkit-scrollbar {
  width: 8px;
  height: 8px;
  margin-left: -8px;
}

::-webkit-scrollbar-thumb {
  height: 180px;
  border: 2px solid rgba(0, 0, 0, 0);
  border-radius: 4px;
  background-color: rgba(0, 0, 0, 0.25);
  background-clip: padding-box;
  transition: background-color 0.35s ease;
}

:hover::-webkit-scrollbar-thumb,
::-webkit-scrollbar-thumb:hover {
  background-color: rgba(0, 0, 0, 1);
}

::-webkit-scrollbar-button {
  display: none;
  width: 0;
  height: 0;
}

::-webkit-scrollbar-corner {
  background-color: transparent;
}
