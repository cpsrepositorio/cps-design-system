body
  font-family: "Open Sans", "Segoe UI", Tahoma, Sans-serif
  font-size: 1rem
  font-style: normal
  font-variant: normal
  font-weight: 400
  line-height: 1rem

.navbar, .sidebar
  backdrop-filter: blur(8px)
  background-color: rgba(252, 252, 252, 0.85) !important
  background-image: url("~@source/assets/images/acrylic-noise.png") !important

  .logo
    height: 2.625rem !important
    margin: -.25rem 0

  .site-name
    display: none

  .links
    background: none !important

.home
  .features
    text-align: center

  .hero img
    max-width: 260px !important

.page
  .custom-block
    &.tip
      background: #f8f8f8
      border-color: #dcdcdc

.medium-zoom--opened
  .medium-zoom-overlay
    backdrop-filter: blur(6px)
    background-color: rgba(0, 0, 0, 0.4) !important

.medium-zoom-image.medium-zoom-image--opened
  filter: drop-shadow(0 2px 21px rgba(0, 0, 0, 0.1474)) drop-shadow(0 32px 64px rgba(0, 0, 0, 0.1876))

.color-dot
  display: inline-block
  border-radius: 12px
  width: 12px
  height: 12px
  margin-right: 4px
